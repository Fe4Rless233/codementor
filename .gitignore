# .gitignore

# ---------------------------------------------------------------
# Dependency directories
# ---------------------------------------------------------------
node_modules/
.pnpm-store/ # If using pnpm

# ---------------------------------------------------------------
# Next.js build output
# ---------------------------------------------------------------
.next/
out/ # For static exports

# ---------------------------------------------------------------
# Environment variables (CRITICAL for security)
# ---------------------------------------------------------------
.env
.env.local
.env.*.local

# ---------------------------------------------------------------
# Logs and temporary files
# ---------------------------------------------------------------
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.DS_Store # macOS specific
.vscode/ # VS Code settings (optional, if you have user-specific settings)
*.log
*.sqlite
*.sqlite-journal

# ---------------------------------------------------------------
# Prisma generated client and local DB files
# ---------------------------------------------------------------
prisma/migrations/*/*.db # If you're using SQLite for development with Prisma
prisma/dev.db
prisma/dev.db-journal
node_modules/.prisma/client/

# ---------------------------------------------------------------
# TypeScript cache files
# ---------------------------------------------------------------
.tsbuildinfo

# ---------------------------------------------------------------
# Production build specific
# ---------------------------------------------------------------
.vercel/ # Vercel specific
.netlify/ # Netlify specific

# ---------------------------------------------------------------
# IDE specific files
# ---------------------------------------------------------------
.idea/ # IntelliJ IDEA
.vscode/ # Visual Studio Code (if you have user-specific configs you don't want to share)
*.sublime-project
*.sublime-workspace

# ---------------------------------------------------------------
# Test coverage reports
# ---------------------------------------------------------------
coverage/

# ---------------------------------------------------------------
# Custom: Socket.io server specific logs/data (if any)
# ---------------------------------------------------------------
socket-server/node_modules/
socket-server/*.log